<div class="col-md-10" id="maincontents">
  <div class="row">
    <div class="content-box-large">
      <div class="panel-heading">
          <div class="panel-body">
              <form method="POST" action="/inventories/upload" enctype="multipart/form-data">
                  <input type="hidden" name="inventory_id" value="<%= @inventory_id %>">
                  <div class="form-group">
                      <label class="col-md-2 control-label" >Select File</label>
                      <div class="col-md-10">
                          <input type="file" class="btn btn-default" id="uploadFile" name="uploadsheet">
                          <p class="help-block">
                              Please upload a filled-out version of the import template.
                          </p>
                          <button class="btn btn-default" type="submit">Upload</button>
                      </div>
                  </div>
              </form>
          </div>
      </div>
    </div>
  </div>
</div>
