<div class="col-md-10" id="maincontents">
  <div class="row">
    <div class="content-box-large">
      <div class="panel-heading">
	        <div class="panel-title">Manage inventories</div>
          <div class="panel-body">
              <table class="table table-striped table-bordered">
                  <thead>
                      <tr>
                          <th>ID</th>
                          <th>Name</th>
                          <th></th>
                      </tr>
                  </thead>
                  <tbody>

              <% @inventories.each do |inventory| %>
                  <tr>
                      <td><%= inventory.id %></td>
                      <td><%= inventory.entries["name"] %></td>
                      <td><a href="/inventory/<%= inventory.id %>"><button class="btn btn-primary">View</button></a> </td>
                  </tr>
              <% end %>
                  </tbody>
              </table>
          </div>
      </div>
    </div>
  </div>
</div>
