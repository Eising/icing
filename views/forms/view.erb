<div class="col-md-10" id="maincontents">
  <div class="row">
    <div class="content-box-large">
      <div class="panel-heading">
	<div class="panel-title">Service form <%= @form.name %></div>
      </div>
      <div class="panel-body">
	<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
	  <tr>
	    <td>Name</td>
	    <td><%= @form.name %></td>
	  </tr>
	   <tr>
	    <td>Description</td>
	    <td><%= @form.description %></td>
	  </tr>
	  <tr>
	    <td>Referenced templates</td>
	    <td>
	      <ul>
		<% @form.template.each do |template| %>
		<li><%= template.name %></li>
		<% end %>
	      </ul>
	    </td>
	  </tr>
	</table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="content-box-large">
      <div class="panel-heading">
        <div class="panel-title">Configured fields and defaults</div>
      </div>
      <div class="panel-body">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Label</th>
              <th>Default value</th>
            </tr>
          </thead>
          <tbody>
            <% @form.defaults.each do |key, opt| %>
            <tr>
              <td><%= key %></td>
              <td><%= opt["name"] %></td>
              <td><%= opt["value"] %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
