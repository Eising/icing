<div class="col-md-10" id="maincontents">
  <div class="row">
    <div class="content-box-large">
      <div class="panel-heading">
	<div class="panel-title">Pending orders</div>
	<div class="panel-options"><a href="#"><i class="glyphicon glyphicon-plus" id="order_add_btn"></i></a></div>
      </div>
      <div class="panel-body">
	<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="ordertable">
	  <thead>
	    <tr>
	      <th>Reference</th>
	      <th>Customer</th>
	      <th>Location</th>
	      <th>Product</th>
	      <th>Speed</th>
	      <th>Form name</th>
	      <th>Comment</th>
	      <th>Actions</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @orders.each do |order| %>
	    <tr>
	      <td><%= order.reference %></td>
	      <td><%= order.customer %></td>
	      <td><%= order.location %></td>
	      <td><%= order.product %></td>
	      <td><%= order.form.name %></td>
	      <td><%= order.comment %></td>
	      <td><a href="/order/<%=order.id%>/run"><button class="btn btn-info"><i class="glyphicon glyphicon-arrow-right"></i>Process</button></a></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
      </div>
    </div>
  </div>
  <div class="row" id="order_form">
    <div class="col-md-6">
      <div class="content-box-large">
	<div class="panel-heading">
	  <div class="panel-title">Add Order</div>
	</div>
	<div class="panel-body">
	  <form class="form-horizontal" role="form" method="POST" action="/order/add">
	    <div class="form-group">
	      <label for="inputRef" class="col-sm-2 control-label">Order Reference</label>
	      <div class="col-sm-10">
		<input type="text" class="form-control" id="inputRef" placeholder="Reference" name="reference">
	      </div>
	    </div>
	    <div class="form-group">
	      <label for="inputCust" class="col-sm-2 control-label">Customer</label>
	      <div class="col-sm-10">
		<input type="text" class="form-control" id="inputCust" placeholder="Customer" name="customer">
	      </div>
	    </div>
	    <div class="form-group">
	      <label for="inputLoc" class="col-sm-2 control-label">Location</label>
	      <div class="col-sm-10">
		<input type="text" class="form-control" id="inputLoc" placeholder="Location" name="location">
	      </div>
	    </div>
	    <div class="form-group">
	      <label for="inputProd" class="col-sm-2 control-label">Product</label>
	      <div class="col-sm-10">
		<input type="text" class="form-control" id="inputProd" placeholder="Product" name="product">
	      </div>
	    </div>
	    <div class="form-group">
	      <label for="inputForm" class="col-sm-2 control-label">Configuration Form</label>
	      <div class="col-sm-10">
		<select class="form-control" id="inputForm" name="form_id">
		  <% @forms.each do |form| %>
		  <option value="<%= form.id %>"><%= form.name %></option>
		  <% end %>
		</select>
	      </div>
	    </div>
	    <div class="form-group">
	      <label for="inputComment" class="col-sm-2 control-label">Comment</label>
	      <div class="col-sm-10">
		<textarea class="form-control" placeholder="Comment" rows="3" name="comment"></textarea>
	      </div>
	    </div>
	    <div class="form-group">
	      <div class="col-sm-offset-2 col-sm-10">
		<button type="submit" class="btn btn-primary">Add</button>
	      </div>
	    </div>
	  </form>
	</div>
      </div>
    </div>
  </div>
</div>
